<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <BitmapImage x:Key="AttentionBitmapImage" UriSource="Assets/Attention-16.png"/>
    <BitmapImage x:Key="GridBitmapImage" UriSource="Assets/Grid-16.png"/>
    <BitmapImage x:Key="ZoomToFitBitmapImage" UriSource="Assets/Zoom to Extents-16.png"/>
    <BitmapImage x:Key="LockBitmapImage" UriSource="Assets/Lock-16.png"/>

    <Style TargetType="Image" x:Key="GridImage">
        <Setter Property="Source" Value="{DynamicResource GridBitmapImage}"/>
        <Setter Property="Width" Value="16"/>
    </Style>

    <Style TargetType="Image" x:Key="ZoomToFitIamge">
        <Setter Property="Source" Value="{DynamicResource ZoomToFitBitmapImage}"/>
        <Setter Property="Width" Value="16"/>
    </Style>

    <Style TargetType="Image" x:Key="LockImage">
        <Setter Property="Source" Value="{DynamicResource LockBitmapImage}"/>
        <Setter Property="Width" Value="16"/>
    </Style>

</ResourceDictionary>